<style>

h2 {
	text-align: center;
	font-family: 'Poiret One', cursive;
	color: #418fde;
	text-shadow: 2px 2px #418fde;
	font-size: 60px;
}
.center-btn {
	display: flex;
	justify-content: center;
}
input#foodBankLoc {
	color: #000;
	border: none;
}
h4 {
	color: #418fde;
	margin-bottom: -5px;
	font-family: 'Poiret One', cursive;
}
.form-check-label {
	font-family: 'Raleway', cursive;
	font-size: 50px;
	padding: 15px;
}
[type="checkbox"]+label:before, [type="checkbox"]:not(.filled-in)+label:after{
	margin-top: 17px;
}

</style>

 <h2> Update page </h2>
 <% var riceandpasta = '' %>
 <% var cannedvegetables = '' %>
 <% var cannedfruits = '' %>
 <% var rolledoats = '' %>
 <% var peanutbutter = '' %>
 <% var cannedstews = '' %>
 <%	var cannedchicken = ''%>
 <%	var coldcereal = ''%>
 <%	var glutenfood = '' %>
 <%	var cannedsoups = '' %>

<% if(foodItem[0].checkedItems) {%>
<%foodItem[0].checkedItems.forEach(function(updateItem) {%>
<% if(updateItem === "Rice and Pasta") {%> 
	<% riceandpasta = 'checked' %> 
<% } %>

<% if(updateItem === "Canned Vegetables") {%> 
	<% cannedvegetables = 'checked' %> 
<% }%>

<% if(updateItem === "Canned fruits") {%> 
	<% cannedfruits = 'checked' %> 
<% }%>

<% if(updateItem === "Rolled oats") {%> 
	<% rolledoats = 'checked' %> 
<% } %>

<% if(updateItem === "Peanut butter or other nut butters") {%> 
	<% riceandpasta = 'checked' %> 
<% } %>

<% if(updateItem === "Canned stews") {%> 
	<% cannedstews = 'checked' %> 
<% }%>

<% if(updateItem === "Canned chicken") {%> 
	<% cannedchicken = 'checked' %> 
<% } %>

<% if(updateItem === "Cold cereal") {%> 
	<% coldcereal = 'checked' %> 
<% }%>

<% if(updateItem === "Gluten-free foods") {%> 
	<% glutenfood = 'checked' %> 
<% } %>

<% if(updateItem === "Canned soups") {%> 
	<% cannedsoups = 'checked' %> 
<% } %>

<%});%>
<%}%>


<div class="container">
	<form method= "POST" action="/profile/<%= foodItem[0]._id %>" id="update-food-posts">
		<div class="row">
			<div class="col s12 m6">

				  <input id="rice-and-pasta" class="form-check-input" type="checkbox" name="Rice and Pasta" value="Rice and Pasta" 
				  <%=riceandpasta%>>
				  <label class="form-check-label " for="rice-and-pasta">Rice and Pasta</label><br>
				
				  <input id="canned-vegetables class="form-check-input active" type="checkbox" name="Canned Vegetables" value="Canned Vegetables" <%=cannedvegetables%>>
				  <label class="form-check-label" for="canned-vegetables">Canned Vegetables</label><br>

				  <input id="canned-fruits" class="form-check-input" type="checkbox" name="Canned fruits" 
				  value="Canned fruits"
				  <%=cannedfruits%>>
				  <label class="form-check-label" for="canned-fruits">Canned fruits</label><br>

				  <input id="rolled-oats" class="form-check-input" type="checkbox" name="Rolled oats" value="Rolled oats"
				  <%=rolledoats%>>
				  <label class="form-check-label" for="rolled-oats">Rolled oats</label><br>

				  <input id="nuts" class="form-check-input" type="checkbox" name="Peanut butter or other nut butters" value="Peanut butter or other nut butters"<%=peanutbutter%>>
				  <label class="form-check-label" for="nuts">Peanut butter or other nut butters</label><br>

				  <input id="canned-stews" class="form-check-input" type="checkbox" name="Canned stews" value="Canned stews"
				  <%=cannedstews%>>
				  <label class="form-check-label" for="canned-stews">Canned stews</label><br>

				  <input id="cold-cereal" class="form-check-input" type="checkbox" name="Cold cereal" value="Cold cereal"
				  <%=coldcereal%>>
				  <label class="form-check-label" for="cold-cereal">Cold cereal</label><br>

				  <input id="glutent-free-foods" class="form-check-input" type="checkbox" name="Gluten-free foods" value="Gluten-free foods" <%=glutenfood%>>

				  <label class="form-check-label" for="glutent-free-foods">Gluten-free foods</label><br>

				  <input id="canned-soups" class="form-check-input" type="checkbox" name="Canned soups" value="Canned soups"<%=cannedsoups%>>
				  <label class="form-check-label" for="canned-soups">Canned soups</label><br>

				  <input id="canned-chicken" class="form-check-input" type="checkbox" name="Canned chicken" value="Canned chicken"<%=cannedchicken%>>
				  <label class="form-check-label" for="canned-chicken">Canned chicken</label><br>

				  <input value="<%=foodItem[0].postItems%>" type ="text" name="postItems" placeholder="Add additional items here">
			    	
			</div>
			<div class="col s12 m6">
				<input id="pac-input" class="controls" type="text" placeholder="Enter city here">
				<div class= "container" id="map"></div>
				<h4>Selected Food Bank:</h4> 
				<input type="text" name="foodBankLoc" value="<%=foodItem[0].foodBankLoc%> " id="foodBankLoc" disabled>
			</div>
		</div>
		<div class="center-btn">
			<button type="submit" class="btn btn-primary button-yellow">Save Updates</button>
		</div>
	</form>
</div>
