
 <h2> Update page </h2>
 <% var riceandpasta = '' %>
 <% var cannedvegetables = '' %>
 <% var cannedfruits = '' %>
 <% var rolledoats = '' %>
 <% var peanutbutter = '' %>
 <% var cannedstews = '' %>
 <%	var cannedchicken = ''%>
 <%	var coldcereal = ''%>
 <%	var glutenfood = '' %>
 <%	var cannedsoups = '' %>

<%foodItem[0].checkedItems.forEach(function(updateItem) {%>
<% if(updateItem === "Rice and Pasta") {%> 
	<% riceandpasta = 'checked' %> 
<% } %>

<% if(updateItem === "Canned Vegetables") {%> 
	<% cannedvegetables = 'checked' %> 
<% }%>

<% if(updateItem === "Canned fruits") {%> 
	<% cannedfruits = 'checked' %> 
<% }%>

<% if(updateItem === "Rolled oats") {%> 
	<% rolledoats = 'checked' %> 
<% } %>

<% if(updateItem === "Peanut butter or other nut butters") {%> 
	<% riceandpasta = 'checked' %> 
<% } %>

<% if(updateItem === "Canned stews") {%> 
	<% cannedstews = 'checked' %> 
<% }%>

<% if(updateItem === "Canned chicken") {%> 
	<% cannedchicken = 'checked' %> 
<% } %>

<% if(updateItem === "Cold cereal") {%> 
	<% coldcereal = 'checked' %> 
<% }%>

<% if(updateItem === "Gluten-free foods") {%> 
	<% glutenfood = 'checked' %> 
<% } %>

<% if(updateItem === "Canned soups") {%> 
	<% cannedsoups = 'checked' %> 
<% } %>

<%});%>



<div class="form-check form-check-inline">
	<form method= "POST" action="/profile/<%= foodItem[0]._id %>" id="update-food-posts">

	  <input id="rice-and-pasta" class="form-check-input" type="checkbox" name="Rice and Pasta" value="Rice and Pasta" 
	  <%=riceandpasta%>>
	  <label class="form-check-label " for="rice-and-pasta">Rice and Pasta</label>
	
	  <input id="canned-vegetables class="form-check-input active" type="checkbox" name="Canned Vegetables" value="Canned Vegetables" <%=cannedvegetables%>>
	  <label class="form-check-label" for="canned-vegetables">Canned Vegetables</label>

	  <input id="canned-fruits" class="form-check-input" type="checkbox" name="Canned fruits" value="Canned fruits"
	  <%=cannedfruits%>>
	  <label class="form-check-label" for="canned-fruits">Canned fruits</label>

	  <input id="rolled-oats" class="form-check-input" type="checkbox" name="Rolled oats" value="Rolled oats"
	  <%=rolledoats%>>
	  <label class="form-check-label" for="rolled-oats">Rolled oats</label>

	  <input id="nuts" class="form-check-input" type="checkbox" name="Peanut butter or other nut butters" value="Peanut butter or other nut butters"<%=peanutbutter%>>
	  <label class="form-check-label" for="nuts">Peanut butter or other nut butters</label>

	  <input id="canned-stews" class="form-check-input" type="checkbox" name="Canned stews" value="Canned stews"
	  <%=cannedstews%>>
	  <label class="form-check-label" for="canned-stews">Canned stews</label>

	  <input id="cold-cereal" class="form-check-input" type="checkbox" name="Cold cereal" value="Cold cereal"
	  <%=coldcereal%>>
	  <label class="form-check-label" for="cold-cereal">Cold cereal</label>

	  <input id="glutent-free-foods" class="form-check-input" type="checkbox" name="Gluten-free foods" value="Gluten-free foods" <%=glutenfood%>>

	  <label class="form-check-label" for="glutent-free-foods">Gluten-free foods</label>

	  <input id="canned-soups" class="form-check-input" type="checkbox" name="Canned soups" value="Canned soups"<%=cannedsoups%>>
	  <label class="form-check-label" for="canned-soups">Canned soups</label>

	  <input id="canned-chicken" class="form-check-input" type="checkbox" name="Canned chicken" value="Canned chicken"<%=cannedchicken%>>
	  <label class="form-check-label" for="canned-chicken">Canned chicken</label>

	  <input value="<%=foodItem[0].postItems%>" type ="text" name="postItems" placeholder="Add additional items here">
    	<button type="submit" class="btn btn-primary">Save updates</button>
	</form>
</div>

<div id="foodDiv"></div>