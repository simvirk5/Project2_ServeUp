<style>
h2,h1 {
text-align: center;
font-family: 'Poiret One', cursive;
color: #418fde;
text-shadow: 2px 2px #418fde;
}

.form-check-label {
	font-family: 'Raleway', cursive;
	font-size: 50px;
	padding: 15px;
}

.container {
	padding: 20px;
	
}
[type="checkbox"]+label:before, [type="checkbox"]:not(.filled-in)+label:after{
	margin-top: 17px;
}
input#foodBankLoc {
	color: #000;
	border: none;
	font-family: 'Poiret One', cursive;

}
h4 {
	color: #418fde;
	margin-bottom: -5px;
	font-family: 'Poiret One', cursive;

}
.center-btn {
	display: flex;
	justify-content: center;
}
</style>

<h2>Select Items and Location</h2>

<div class= "container">
	<form method= "POST" action="/post" id="add-food-posts">
		<div class="row">
			<div class="col s12 m6">


				  <input id= "rice-and-pasta" class="form-check-input" type="checkbox" name="Rice and Pasta" value="Rice and Pasta">
				  <label class="form-check-label" for="rice-and-pasta">Rice and Pasta</label><br>

				  <input id="canned-vegetables" class="form-check-input" type="checkbox" name="Canned Vegetables" value="Canned Vegetables">
				  <label class="form-check-label" for="canned-vegetables">Canned Vegetables</label><br>

				  <input id="canned-fruits" class="form-check-input" type="checkbox" name="Canned fruits" value="Canned fruits">
				  <label class="form-check-label" for="canned-fruits">Canned fruits</label><br>

				  <input id="rolled oats" class="form-check-input" type="checkbox" name="Rolled oats" value="Rolled oats">
				  <label class="form-check-label" for="rolled oats">Rolled oats</label><br>

				  <input id="nuts" class="form-check-input" type="checkbox" name="Peanut butter or other nut butters" value="Peanut butter or other nut butters">
				  <label class="form-check-label" for="nuts">Peanut butter or other nut butters</label><br>

				  <input id="canned stews" class="form-check-input" type="checkbox" name="Canned stews" value="Canned stews">
				  <label class="form-check-label" for="canned stews">Canned stews</label><br>

				  <input id="cold-cereal" class="form-check-input" type="checkbox" name="Cold cereal" value="Cold cereal">
				  <label class="form-check-label" for="cold-cereal">Cold cereal</label><br>

				  <input id="glutent-free-foods" class="form-check-input" type="checkbox" name="Gluten-free foods" value="Gluten-free foods">
				  <label class="form-check-label" for="glutent-free-foods">Gluten-free foods</label><br>

				  <input id="canned-soups" class="form-check-input" type="checkbox" name="Canned soups" value="Canned soups">
				  <label class="form-check-label" for="canned-soups">Canned soups</label><br>

				  <input id="canned chicken" class="form-check-input" type="checkbox" name="Canned chicken" value="Canned chicken">
				  <label class="form-check-label" for="canned chicken">Canned chicken</label><br>

				  <input type ="text" name="postItems" placeholder="Add additional items here">
			    	
			</div>
			<div class="col s12 m6">
				<input id="pac-input" class="controls" type="text" placeholder="Enter city here">
				<div class= "container" id="map"></div>
				<h4>Selected Food Bank:</h4> 
				<input type="text" name="foodBankLoc" value="None Selected" id="foodBankLoc" disabled>
			</div>
		</div>
		<div class="center-btn">
			<button type="submit" class="btn btn-primary button-yellow">Submit</button>
		</div>
	</form>
</div>
  
